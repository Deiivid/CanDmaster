<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"

    app:cardUseCompatPadding="true">

    <RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/iconofondoapp"
            android:id="@+id/img1"
        app:civ_border_width="2dp"
        app:civ_border_color="#f0000000"
             />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtperroinfo"
            android:text="Nombre Del Perro :"
            android:textStyle="italic|bold"
            android:textSize="15dp"
            android:textColor="#f0000000"
            android:layout_toRightOf="@+id/img1"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nametext"
            android:text="nombreperro"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#f0000000"
            android:layout_toRightOf="@+id/img1"
            android:layout_below="@+id/txtperroinfo"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nombrevacuna"
            android:text="Nombre De La Vacuna :"
            android:textStyle="italic|bold"
            android:textSize="15dp"
            android:textColor="#f0000000"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/nametext"
            android:layout_toRightOf="@+id/img1"

            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/coursetext"
            android:text="nombrevacuna"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#f0000000"
            android:layout_below="@+id/nombrevacuna"
            android:layout_toRightOf="@+id/img1"

            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fechatxtinfo"
            android:text="Fecha De La Vacuna :"
            android:textStyle="italic|bold"
            android:textSize="15dp"
            android:textColor="#f0000000"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img1"
            android:layout_below="@+id/coursetext"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emailtext"
            android:text="fecha"
            android:textStyle="bold"
            android:inputType="datetime"
            android:textSize="25sp"
            android:textColor="#f0000000"
            android:layout_toRightOf="@+id/img1"
            android:layout_below="@+id/fechatxtinfo"
            android:layout_marginLeft="15dp"/>

        <LinearLayout
            android:layout_below="@+id/emailtext"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Editar"
                android:layout_marginLeft="20dp"
                android:textAllCaps="false"
                android:background="@drawable/buttonrounded_border"
                android:layout_marginRight="5dp"
                android:id="@+id/btnEdit"/>
            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Borrar"

                android:background="@drawable/buttonrounded_border"
                android:textAllCaps="false"
                android:layout_marginLeft="25dp"
                android:id="@+id/btnDelete"/>

        </LinearLayout>
</RelativeLayout>


</androidx.cardview.widget.CardView>