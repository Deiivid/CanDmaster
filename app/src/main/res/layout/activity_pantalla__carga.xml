<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8ABBDEFB"
    tools:context=".Carga.Pantalla_Carga">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="257dp"
        android:layout_height="350dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="76dp"
        app:layout_constraintBottom_toTopOf="@+id/barradeprogesoID"
        app:srcCompat="@drawable/iconofondoapp" />

    <TextView
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="77dp"
        android:layout_marginLeft="130dp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="370dp"
        android:layout_marginEnd="75dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="CanDmaster"
        android:textColor="@color/Black"
        android:textSize="27dp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/barradeprogesoID"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="239dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/imageView"
        android:layout_height="10dp"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/barra_de_progreso_carga" />
</RelativeLayout>